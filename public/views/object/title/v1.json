{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://schemas.dashboard.hdenergie.ca/views/object/title/v1.json",
    "title": "A title block item",
    "description": "A title item for the view",
    "$comment": "This is a really simple title block with no flourish : No color, emphasis anything, just text",

    "type":"object",
    "properties": {
        "titleString": {
            "type":"string"
        },
        "titleStrength": {
            "type":"string",
            "enum": ["h1","h2","h3","h4","h5","h6"],
            "default":"h3"
        }
    },
    "required": ["titleString"]
}